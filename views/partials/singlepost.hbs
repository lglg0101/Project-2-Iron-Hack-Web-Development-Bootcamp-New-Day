<div class="single-post">
  <div class="card" style="width: 50rem;">
  <div class="card-body">
    <h5 class="card-title">{{ this.createdAt }}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Journal Entry</h6>
    <p class="card-text"><em>Daily Affirmation: I am.... {{this.affirmation}}</em></p>
    <a href="/post/{{ this._id }}" class="card-link">View Journal Entry</a>
    <a href="/post/{{ this._id }}/edit" class="card-link">Add Evening Entry</a>
  </div>
</div>
</div>


